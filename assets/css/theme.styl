// Imported Stylesheets
@import 'bootstrap.min.css'
@import 'superslides.css'
@import '../fonts/opensans.css'
@import '../fonts/exo2.css'
@import 'customize.styl'
@import 'nib/vendor'

vendor-prefixes = webkit moz o ms official

// Color Variables
black = #2c2c2c
darkerRed = #5a1819
darkRed = #7d2022
gray = #e7e7e7
red = #cd2f31
shadowGray = #9e9e9e
shadowRed = #ac2527
white = #ffffff

// Font Variables
bodyFont = 'open_sanslight', Helvetica, sans-serif
bodyFontItalic = 'open_sanslight_italic', Helvetica, sans-serif
fontBold = 'open_sanssemibold', Helvetica, sans-serif
fontBoldItalic = 'open_sanssemibold_italic', Helvetica, sans-serif
titleFont = 'exo_2.0extra_bold', 'Arial Black', 'Arial Bold', sans-serif
titleFontItalic = 'exo_2.0extra_bold_italic', 'Arial Black', 'Arial Bold', sans-serif

// Theme Styles
body
	color black
	font 16px/125% bodyFont normal

.seo-title
	left -9999px
	position absolute
	top -9999px

// Header Styles
.MainHeader
	display none
	
// Home Banner
.HomeBanner 
	margin-bottom 20px
	
#slides
	float left
	height 620px

.HomeBanner-slider li 
	padding 0

.HomeBanner-textbox
	background rgba(0,0,0,0.5)
	bottom 0
	box-sizing border-box
	color white
	display block
	font-size 20px
	padding 20px
	position absolute
	text-align right
	width 100%
	
	a 
		color white
		display block
		margin 0 auto
		text-decoration none
		width 80%
	
		h2 
			font-family titleFont
			font-size 28px
			margin 0 0 5px 0
			text-transform uppercase

.slides-navigation
	display block !important
	
	a 
		color white
		font-size 30px
		opacity 0.6
		
		&:hover
			opacity 1
		
		&.prev
			left 20px
		
		&.next
			right 20px
	
// Main Content
.MainContent-item
	float left
	width 50%
	padding 20px
	
	a 
		background gray
		border 1px solid gray
		border-bottom 3px solid shadowGray
		color black
		float left
		padding 10px
		text-decoration none
		width 100%
		
		.ItemCategory
			color red
			float left
			font normal 28px/125% titleFont
			margin-bottom 10px
			text-transform uppercase
			width 100%
		
		.ItemThumbnail
			float left
			width 100%
			margin-bottom 10px
			
			img 
				display block 
				width 100%
		
		.Title 
			font normal 24px/125% titleFont
			
		time 
			color darkRed
		
		.MoreBtn 
			float right
			border none
			padding 5px 20px
			background red
			color white
			transition all 0.2s ease-in-out
			
			&:hover
				background black
		
		&:hover
			border 1px solid rgba(0,0,0,0.15)
			border-bottom 3px solid shadowGray
		
	&:nth-child(even)
		clear left